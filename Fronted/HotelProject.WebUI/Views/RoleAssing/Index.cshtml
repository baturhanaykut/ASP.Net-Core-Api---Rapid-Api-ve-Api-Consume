@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table table-xs mb-0">
        <thead>
            <tr>
                <th>Resim</th>
                <th>Ad Soyad</th>
                <th>Role Ata</th>
                

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                    <td>@item.Name @item.Surname</td>
                    <td><a href="/RoleAssing/AssignRole/@item.Id" class="btn mb-1 btn-rounded btn-outline-warning">Rol Ata</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />



