@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="table-responsive">
    <table class="table table-xs mb-0">
        <thead>
            <tr>
                <th>Resim</th>
                <th>Ad Soyad</th>
                <th>Şehir</th>
                <th>Mail Adresi</th>
                <th>Durum</th>
             
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                    <td>@item.Name @item.Surname</td>
                    <td> @item.City</td>
                    <td> @item.Email</td>
                    <td><i class="fa fa-circle-o text-success  mr-2"></i>Aktif</td>
                    

                </tr>
            }
        </tbody>
    </table>
</div>
<br />

<a href="/Register/Index/" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Kullanıcı Kaydı</a>
