@model List<ResultAppUserListDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table table-xs mb-0">
        <thead>
            <tr>
                <th>Kullanıcı</th>
                <th>Şehir</th>
                <th>Ülke</th>
                <th>Cinsiyet</th>
                

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                    <td> @item.City</td>
                    <td>@item.Country</td>
                    @if(item.Gender == "Erkek")
                    {
                        <td><i class="fa fa-circle-o text-success  mr-2"></i>Erkek</td>
                    }
                    @if (item.Gender == "Kadın")
                    {
                        <td><i class="fa fa-circle-o text-warning  mr-2"></i>Kadın</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
<br />

<a href="/Register/Index/" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Kullanıcı Kaydı</a>


