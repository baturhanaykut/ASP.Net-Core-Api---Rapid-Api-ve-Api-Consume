@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
   
}

<div class="card-body">
    <div class="card-title">
        <h4>Çalışan Listesi</h4>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Oda Numarası</th>
                    <th>Başlık</th>
                    <th>Fiyat</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
             

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    
                    <tr>
                        <td>@item.RoomNumber</td>
                        <td>@item.Title</td>
                        <td>@item.Price</td>
                        <td><a href="/AdminRoom/UpdateRoom/@item.RoomId" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
                        <td><a href="/AdminRoom/DeleteRoom/@item.RoomId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Oda Girişi</a>
    </div>
</div>


