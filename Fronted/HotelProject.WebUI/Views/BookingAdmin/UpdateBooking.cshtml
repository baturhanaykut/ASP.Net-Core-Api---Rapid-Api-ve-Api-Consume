@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="UpdateBooking">
            <input type="hidden" asp-for=BookingId />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Misafir Adı Soy Adı </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label">Misafir Mail Adresi</label>
                <input asp-for="Mail" class="form-control" type="email"/>
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckIn" class="control-label">Misafir Giriş Tarihi</label>
                <input asp-for="CheckIn" class="form-control" type="date"/>
                <span asp-validation-for="CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckOut" class="control-label">Misafir Çıkış Tarihi</label>
                <input asp-for="CheckOut" class="form-control" type="date"/>
                <span asp-validation-for="CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdultCount" class="control-label">Yetişkin Sayısı</label>
                <input asp-for="AdultCount" class="form-control" type="text" />
                <span asp-validation-for="AdultCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChildCount" class="control-label">Çocuk Sayısı</label>
                <input asp-for="ChildCount" class="form-control" type="text" />
                <span asp-validation-for="ChildCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomCount" class="control-label">Oda Sayısı</label>
                <input asp-for="RoomCount" class="form-control" type="text" />
                <span asp-validation-for="RoomCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">Şehir</label>
                <input asp-for="City" class="form-control" type="text" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">Ülke</label>
                <input asp-for="Country" class="form-control" type="text" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Durum</label>
                <input asp-for="Status" class="form-control" type="text" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpecialRequest" class="control-label">Özel İstekler</label>
                <textarea asp-for="SpecialRequest" class="form-control" rows="5"></textarea>
                <span asp-validation-for="SpecialRequest" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rezervasyonu Güncelle" class="btn mb-1 btn-rounded btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn mb-1 btn-rounded btn-outline-success">Geri Dön</a>
</div>

