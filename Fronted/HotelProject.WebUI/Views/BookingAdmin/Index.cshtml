@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card-body">
    <div class="card-title">
        <h4>Rezervasyonlar</h4>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Misafir</th>
                    <th>Giriş Tarihi</th>
                    <th>Çıkış Tarihi</th>
                    <th>Durum</th>
                    <th>Onayla</th>
                    <th>İptal Et</th>
                    <th>Beklet</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th>@count</th>
                        <td>@item.Name</td>
                        <td>@(((DateTime)item.CheckIn).ToString("dd-MM-yyyy"))</td>
                        <td>@(((DateTime)item.CheckOut).ToString("dd-MM-yyyy"))</td>
                        <td><span class="badge badge-primary px-2">@item.Status</span></td>
                        <td><a href="/BookingAdmin/ApprovedReservation/@item.BookingId" class="btn mb-1 btn-rounded btn-outline-primary">Onayla</a></td>
                        <td><a href="/BookingAdmin/CancelReservation/@item.BookingId" class="btn mb-1 btn-rounded btn-outline-danger">İptal Et</a></td>
                        <td><a href="/BookingAdmin/WaitReservation/@item.BookingId" class="btn mb-1 btn-rounded btn-outline-warning">Beklet</a></td>
                        <td><a href="/BookingAdmin/DetailsBooking/@item.BookingId" class="btn mb-1 btn-rounded btn-outline-info">Detaylar</a></td>
                        <td><a href="/BookingAdmin/UpdateBooking/@item.BookingId" class="btn mb-1 btn-rounded btn-outline-dark">Güncelle</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



