@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="UpdateAbout">
            <input type="hidden" asp-for=AboutId />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title1" class="control-label">Hakkımızda Başlık 1</label>
                <input asp-for="Title1" class="form-control" />
                <span asp-validation-for="Title1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title2" class="control-label">Hakkmızda Başlık 2</label>
                <input asp-for="Title2" class="form-control" />
                <span asp-validation-for="Title2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">Açıklama</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerCount" class="control-label">Müşteri SAyısı</label>
                <input asp-for="CustomerCount" class="form-control"/>
                <span asp-validation-for="CustomerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomCount" class="control-label">Oda Sayısı</label>
                <input asp-for="RoomCount" class="form-control"  />
                <span asp-validation-for="RoomCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffCount" class="control-label">Çalışan Sayısı</label>
                <input asp-for="StaffCount" class="form-control"  />
                <span asp-validation-for="StaffCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Hakkımızda Bilgisini Güncelle" class="btn mb-1 btn-rounded btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn mb-1 btn-rounded btn-outline-success">Geri Dön</a>
</div>
