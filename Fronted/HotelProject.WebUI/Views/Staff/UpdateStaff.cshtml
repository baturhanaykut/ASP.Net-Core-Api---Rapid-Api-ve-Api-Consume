@model UpdateStaffViewModel

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="UpdateStaff">
            <input type="hidden" asp-for=StaffId />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Persone Adı Soyadı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Ünvan</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia1" class="control-label">İnstagram</label>
                <input asp-for="SocialMedia1" class="form-control" />
                <span asp-validation-for="SocialMedia1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia2" class="control-label">Twitter</label>
                <input asp-for="SocialMedia2" class="form-control" />
                <span asp-validation-for="SocialMedia2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia3" class="control-label">Facebook</label>
                <input asp-for="SocialMedia3" class="form-control" />
                <span asp-validation-for="SocialMedia3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Personeli Güncelle" class="btn mb-1 btn-rounded btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn mb-1 btn-rounded btn-outline-success">Geri Dön</a>
</div>
