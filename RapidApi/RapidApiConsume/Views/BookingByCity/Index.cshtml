@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    int count = 0;
}

<!DOCTYPE html>


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
@using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
{
    <label>Şehir Id Bilgisini Giriniz</label>
    <input type="text" class="form-control" name="cityId" />
    <br />
    <button class="btn btn-primary">Şehir İçin Otelleri Listele</button>
}

    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Otel Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a href="#" class="btn btn-outline-danger">Detaylar</a></td>

            </tr>
        }
    </table>
</div>
